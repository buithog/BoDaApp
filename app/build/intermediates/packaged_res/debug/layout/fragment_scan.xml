<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/qr_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="600dp"/>

    <View
        android:id="@+id/qr_square"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/border_imageview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_camera_preview"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="Scan"
            android:layout_marginEnd="10dp"
            />

        <Button
            android:id="@+id/btn_select_image"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Chọn ảnh từ thư viện"
            android:textStyle="italic"
            android:textSize="10dp"
            android:drawableLeft="@drawable/baseline_image_24"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>
</RelativeLayout>
